{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "target": "ES2017"
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
